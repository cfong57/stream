<% #this is the partial for songs that aren't in the public pool %>

<div class="row">
  <div class="span8">
    <small>
    <%= content_tag :div, class: 'media', id: "song-#{song.id}" do %>
      <%= link_to '#', class: 'pull-left' do %>
        <%= link_to ("\##{song.id}"), song %>
        <%= song.name %>
        <br style="clear: both; height: 0px;" />
        Uploaded <%= time_ago_in_words(song.created_at) %> ago
        <% if song.user %>
          by <%= song.user.name %>
        <% end %>
      <% end %>
    </small>  
      <p><%= song.audio_html %></p>
      <p><%= markdown song.info %></p>
    </div>
    <div class="span4">
    <% if can? :edit, song %>
      <%= link_to "Edit Song", edit_song_path(song), class: 'btn btn-large btn-block' %> 
    <% end %>
    <% if can? :destroy, song %>
      <%= link_to "Delete Song", [song], method: :delete, class: 'btn btn-large btn-block btn-danger',
      confirm: 'Are you sure you want to delete this song?' %> 
    <% end %>
    </div>
  </div>
<% end %>