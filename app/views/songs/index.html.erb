<div class="row">
  <h1>All Songs</h1>
  <p>
    Index of all songs visible to you. </br>
    <%= sortable "name", "Sort A-Z" %> ‚óè
    <%= sortable "created_at", "Sort by upload date" %>
  </p>

  <div id="tag_cloud">
    Tag cloud: 
    <% tag_cloud Song.tag_counts, ["s", "m", "l"] do |tag, css_class| %>
      <%= link_to tag.name, tag_path(tag.name), class: css_class %>
    <% end %>
  </div>
  <%= render @songs %>
  <%= will_paginate @songs %>
</div>