<div class="row">
  <div class="span8">
    <small>
    <%= content_tag :div, class: 'media', id: "tag-#{tag.id}" do %>
      <%= link_to '#', class: 'pull-left' do %>
        <%= link_to ("\##{tag.id}"), tag_path %>
        <%= tag.name %>
        <br style="clear: both; height: 0px;" />
        Created <%= time_ago_in_words(tag.created_at) %> ago by <%= tag.user.name %>
      <% end %>
    </small>  
      <p><%= markdown tag.value %></p>
    </div>
    <div class="span4">
    <% if can? :create, Tag %>
      <%= link_to "Add new song", new_song_path, class: 'btn btn-large btn-block' %>
    <% end %>
    <% if can? :edit, tag %>
      <%= link_to "Edit Tag", edit_song_path, class: 'btn btn-large btn-block' %> 
    <% end %>
    <% if can? :destroy, tag %>
      <%= link_to "Delete Tag", delete_song_path, class: 'btn btn-large btn-block btn-danger',
      confirm: 'Are you sure you want to delete this tag?' %> 
    <% end %>
    </div>
    <%= render @songs %>
    <%= will_paginate @songs %>
  </div>
<% end %>