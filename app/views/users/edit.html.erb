<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(user, :as => User, :url => registration_path(User), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label :name, class: 'control-label'  %>
    <div class="controls">
      <%= f.text_field :name, :autofocus => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, class: 'control-label'  %>
    <div class="controls">
      <%= f.email_field :email %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && user.pending_reconfirmation? %>
    <div class="control-group">
      <p>Waiting confirmation for:</p>
      <div class="controls">
        <%= user.unconfirmed_email %>
      </div>
    </div>
  <% end %>
  <% unless current_user.provider? %>
    <div class="control-group">
      <%= f.label :password, class: 'control-label' %>
      <div class="controls">
        <%= f.password_field :password %>
      </div>
    </div>
  <% end %>
  <div class="control-group controls">
    <%= f.label :public, class: 'checkbox' do %>
      <%= f.check_box :public %> Public userpage viewable by everyone?
    <% end %>
  </div>
  <div class="control-group controls">
    <%= f.label :make_public_on_delete, class: 'checkbox' do %>
      <%= f.check_box :make_public_on_delete %> Move songs to Anonymous Pool if this account is deleted?
    <% end %>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit "Update", class: 'btn' %>
    </div>
  </div>  
<% end %>

<h3>Cancel my account</h3>
<div class="horizontal-form">
  <div class="control-group">
    <div class="controls">
      <p>
        <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-danger btn-small' %>
      </p>
    </div>
  </div>
</div>